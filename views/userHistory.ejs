<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/main.css" />
    <title>User History</title>
</head>
<body tabindex="-1">

    <!--Navbar-->
    <%- include('partials/navbar', {page: '/userHistory'}) %>
    <!--Navbar-->

    <!--Container-->
    <div class="container mx-auto p-4">

        <!--About text-->
        <div class="hero bg-base-200 rounded-lg p-6">
          <div class="hero-content text-center ">
            <div class="max-w-md">
              <h1 class="text-5xl font-bold"><%= session.user.userName %></h1>
              <p class="py-6">User History: <%= session.user.email %></p>
            </div>
          </div>
        </div>
        <!--About text-->
  
        <br>
  
        <!--User History Table-->
        <table class="table table-zebra">
            <thead>
              <tr>
                  <th>Login Date/Time</th>
                  <th>Client Information</th>
              </tr>
            </thead>
            <tbody>
                <% session.user.loginHistory.forEach((entry) => { %>
                  <tr>
                      <td><%= new Date(entry.dateTime).toLocaleString() %></td>
                      <td><%= entry.userAgent %></td>
                  </tr>
                <% }); %>
            </tbody>
        </table> 
        <!--User History Table-->

    </div>
    <!--Container-->

</body>