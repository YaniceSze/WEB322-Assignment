<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/main.css" />
    <title>Edit Set</title>
</head>
<body tabindex="-1">

    <!--Navbar-->
    <%- include('partials/navbar', {page: ''}) %>
    <!--Navbar-->

    <!--Container-->
    <div class="container mx-auto p-4">

      <!--About text-->
      <div class="hero bg-base-200 rounded-lg p-6">
        <div class="hero-content text-center ">
          <div class="max-w-md">
            <h1 class="text-5xl font-bold">Edit Set: <%= set.name %></h1>
            <p class="py-6">Use the below form to update the <%= set.name %> Set</p>
          </div>
        </div>
      </div>
      <!--About text-->

      <br>

      <!--Form-->
      <form action="/lego/editSet" method="POST">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 gap-y-0">
            
            <!--Name & Year-->
            <div>
                <div class="mb-6">
                    <label for="name" class="block text-gray-700 font-medium">Name</label>
                    <input class="w-full border border-gray-300 rounded-md px-3 py-2 focus:border-blue-300" type="text" id="name" name="name" required value="<%= set.name %>"/>
                </div>
                <div class="mb-6">
                    <label for="year" class="block text-gray-700 font-medium">Year</label>
                    <input class="w-full border border-gray-300 rounded-md px-3 py-2 focus:border-blue-300" type="number" id="year" name="year" required value="<%= set.year %>"/>
                </div>
            </div>

            <!--Number of Parts & Image URL-->
            <div>
                <div class="mb-6">
                    <label for="num_parts" class="block text-gray-700 font-medium">Number of Parts</label>
                    <input class="w-full border border-gray-300 rounded-md px-3 py-2 focus:border-blue-300" type="number" id="num_parts" name="num_parts" required value="<%= set.num_parts %>"/>
                </div>
                <div class="mb-6">
                    <label for="img_url" class="block text-gray-700 font-medium">Image URL</label>
                    <input class="w-full border border-gray-300 rounded-md px-3 py-2 focus:border-blue-300" type="url" id="img_url" name="img_url" required value="<%= set.img_url %>"/>
                </div>
            </div>
            
            <!--Theme & Set Number-->
            <div>
                <div class="mb-6">
                  <label for="theme_id" class="block text-gray-700 font-medium">Theme</label>
                  <select class="w-full border border-gray-300 rounded-md px-3 py-2 focus:border-blue-300" id="theme_id" name="theme_id" required>
                    <% themes.forEach(theme=>{ %>
                        <option <%= (set.theme_id == theme.id) ? "selected" : "" %> value="<%= theme.id %>">
                          <%= theme.name %>
                        </option>
                    <% }) %>                                        
                  </select>
                </div>
                <div class="mb-6">
                  <label for="set_num" class="block text-gray-700 font-medium">Set Number</label>
                  <input class="opacity-50 cursor-not-allowed w-full border border-gray-300 rounded-md px-3 py-2 focus:border-blue-300" type="text" id="set_num" name="set_num" required value="<%= set.set_num %>" readonly/>
                </div>
            </div>

        </div>

        <!--Submit button-->
        <div class="mt-6">
          <button type="submit" class="btn btn-success">UPDATE SET</button>
          <a href="/lego/deleteSet/<%= set.set_num %>" class="btn btn-error">DELETE SET</a>
        </div>

      </form>
      <!--Form-->
      
    </div>
    <!--Container-->
</body>